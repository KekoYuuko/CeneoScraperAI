{% extends "layout.html.jinja" %}

{% block middle %}
    <h2> Opinions extraction </h2>
    <h6> Please enter id of product from Ceneo.pl which is 8 numbers long </h6>
    <h3>{{ test }}</h3>
    {% if form.productId.errors %}
        <div class="alert alert-danger" role="alert">
            {% for error in form.productId.errors  %}
                <p>{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}
    <form method="POST" action="{{ url_for('extract') }}">
        {{ form.csrf_token }}
        {{ form.productId.label }} {{ form.productId(size=15) }}
        {{ form.submit(class_="btn btn-info")}}
    </form>
{% endblock middle %}